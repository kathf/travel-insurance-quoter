<div class="row">
  <div class="quote-container col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Your travel insurance policy quote:
          <b class="pull-right"><%= number_to_currency(@quote.policy.price) %></b>
        </h3>
      </div>
      <div class="panel-body">
        <p> Age:   <%= age_years(@quote) %> </p>
        <p> Trip length:   <%= trip_days(@quote) %> <%= 'day'.pluralize(trip_days(@quote)) %> </p>
      </div>
    </div>

    <%= link_to "Edit quote", edit_quote_path(@quote), class: "pull-left btn-success btn-lg" %>

  </div>
</div>
