<div class="row">
  <h2 class="form-header text-center">Enter the following details to obtain your quote</h2>
  <div class="form-container col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
    <div class="row">
    <%= simple_form_for @quote, html: { class: "form-inline"}, wrapper: :inline_form  do |f| %>
      <%= f.input :dob, as: :date, label: "Date of birth", order: [:day, :month, :year], start_year: (Time.now.year - 70), end_year: (Time.now.year - 18), default: (Time.new(1980,2,10)) %>
      <%= f.input :trip_start, as: :date, label: "Trip start date", order: [:day, :month, :year], default: (Time.now + 7.days)  %>
      <%= f.input :trip_end, as: :date, label: "Trip end date", order: [:day, :month, :year], default: (Time.now + 28.days)   %>
      <%= f.button :submit, "Get Quote", class: "pull-right btn-success btn-lg" %>
    <% end %>
    </div>
  </div>
</div>
